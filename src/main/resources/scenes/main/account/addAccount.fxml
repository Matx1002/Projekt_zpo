<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="client.controllers.AddAccountController"
            prefHeight="250.0" prefWidth="400.0">
    <children>
        <!-- Label for account number -->
        <Label text="Account Number:" layoutX="20.0" layoutY="20.0" />

        <!-- Text field for entering account number -->
        <TextField fx:id="accountNumberField" layoutX="120.0" layoutY="20.0" prefWidth="200.0" promptText="Enter Account Number" />

        <!-- Label for owner name -->
        <Label text="Owner Name:" layoutX="20.0" layoutY="60.0" />

        <!-- Text field for entering owner name -->
        <TextField fx:id="ownerNameField" layoutX="120.0" layoutY="80.0" prefWidth="200.0" promptText="Enter Owner's Name" />

        <!-- Label for PIN -->
        <Label text="PIN:" layoutX="20.0" layoutY="120.0" />

        <!-- Password field for entering PIN -->
        <PasswordField fx:id="pinField" layoutX="120.0" layoutY="140.0" prefWidth="200.0" promptText="Enter PIN" />

        <!-- Label for initial balance -->
        <Label text="Initial Balance:" layoutX="20.0" layoutY="180.0" />

        <!-- Text field for entering initial balance -->
        <TextField fx:id="balanceField" layoutX="120.0" layoutY="200.0" prefWidth="200.0" promptText="Enter Initial Balance" />

        <!-- Button for adding the account -->
        <Button fx:id="addButton" layoutX="150.0" layoutY="250.0" prefWidth="100.0" text="Add Account" onAction="#handleAddButton" />
    </children>
</AnchorPane>
